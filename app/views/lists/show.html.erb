<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
<p><%= movie.title %></p>
<%= image_tag movie.poster_url, width: 200 %>
<% movie.bookmarks.each do |bookmark| %>
  <%= bookmark.comment %>
  <%= link_to "Delete?", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <% end  %>
<% end %>

<%= link_to "Back to all lists", root_path %>
<%= link_to "Bookmark a movie", new_list_bookmark_path(@list) %>
